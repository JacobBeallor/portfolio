<style>
	/* 
	Design: Inspired by Yan Holtz's layout
	- Card-based project displays
	- Clean visual hierarchy
	- Timeline element
	- Earthy color palette maintained
	*/

	:global(body) {
		margin: 0;
		padding: 0;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
		color: #3d3d3d;
		background: #faf9f5;
		line-height: 1.6;
		-webkit-font-smoothing: antialiased;
	}

	.portfolio {
		max-width: 100%;
	}

	.container {
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 40px;
	}

	/* Navigation - cleaner with name */
	.nav {
		padding: 24px 0;
		background: rgba(250, 249, 245, 0.95);
		backdrop-filter: blur(8px);
		border-bottom: 1px solid #d9d4c7;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.nav .container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.name-logo {
		font-size: 18px;
		font-weight: 600;
		color: #4a5946;
	}

	.nav-links {
		display: flex;
		gap: 32px;
	}

	.nav a {
		color: #6B7F6A;
		text-decoration: none;
		font-size: 15px;
		font-weight: 500;
		transition: color 0.2s;
	}

	.nav a:hover {
		color: #C87E5C;
	}

	/* Hero - larger, bolder */
	.hero {
		padding: 100px 0 80px;
		background: #faf9f5;
	}

	.hero-content {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		gap: 60px;
	}

	.hero-text {
		flex: 1;
	}

	.hero h1 {
		font-size: 56px;
		font-weight: 600;
		letter-spacing: -0.02em;
		margin: 0 0 24px;
		color: #4a5946;
		line-height: 1.1;
	}

	.tagline {
		font-size: 20px;
		color: #5a5a5a;
		margin: 0;
		line-height: 1.65;
	}

	.tagline strong {
		color: #6B7F6A;
		font-weight: 600;
	}

	.headshot {
		width: 180px;
		height: 180px;
		border-radius: 50%;
		object-fit: cover;
		flex-shrink: 0;
		border: 4px solid #d9d4c7;
	}

	/* Social links in hero */
	.social-links {
		display: flex;
		gap: 20px;
		margin-top: 28px;
	}

	.social-links a {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 10px 18px;
		background: rgba(255, 255, 255, 0.6);
		border: 1px solid #d9d4c7;
		border-radius: 8px;
		color: #6B7F6A;
		text-decoration: none;
		font-size: 15px;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.social-links a:hover {
		background: rgba(255, 255, 255, 0.95);
		border-color: #C87E5C;
		color: #C87E5C;
		transform: translateY(-1px);
	}

	.social-links svg {
		flex-shrink: 0;
	}

	/* Projects card grid */
	.projects {
		padding: 80px 0;
		background: #f5f3ed;
	}

	.projects h2 {
		font-size: 36px;
		font-weight: 600;
		color: #4a5946;
		margin: 0 0 12px;
		text-align: center;
	}

	.section-intro {
		text-align: center;
